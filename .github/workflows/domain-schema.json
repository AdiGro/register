{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "subdomain": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "pattern": "^(https?://)?(?:[a-zA-Z-]+\\.){1,}(?:[a-zA-Z-]{2,})(\\/)?$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "type": {
      "type": "string",
      "enum": ["A", "CNAME", "TXT", "MX"]
    }
  },
  "required": ["subdomain", "url", "email"],
  "additionalProperties": false
}
